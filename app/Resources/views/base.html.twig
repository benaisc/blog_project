<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %}</title>

        <!-- Main CSS Stylesheet -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        <!-- All CSS Plugins -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/plugin.css') }}">

        <!-- Google Web Fonts  -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,300,500,600,700">
        {% block stylesheets %}{% endblock %}

        <!-- Favicon -->
         <link rel="icon" type="image/x-icon" href="{{ asset('favicon-16.ico') }}" />
    </head>
    <body>
    <!-- Preloader Start --
    <div class="preloader">
        <div class="rounder"></div>
    </div>

     -- Preloader End -->

    <a href={{ url('homepage') }}>
        <div class="page-header">
            <h1>Travelling through Australia</h1>
        </div>
    </a>



    <div id="main">
        <div class="container">
            <div class="row">

                <!-- About Me (Left Sidebar) Start -->
                <div class="col-md-3">
                    <div class="about-fixed">

                        <div class="my-pic">
                            <img src="{{ asset('public/pic.jpg') }}" alt="">
                            <a href="javascript:void(0)" class="collapsed" data-target="#menu" data-toggle="collapse"><i class="icon-menu menu"></i></a>
                            <div id="menu" class="collapse">

                                <ul class="social-icon">
                                    <li><a href="https://www.facebook.com/sammtass" target="_blank" class="facebook"><i class="fa fa-facebook"></i></a></li>
                                    <!--<li><a href="#" target="_blank" class="twitter"><i class="fa fa-twitter"></i></a></li> -->
                                    <li><a href="https://fr.linkedin.com/in/alois-tendil-03464b93" target="_blank" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                                    <li><a href="https://github.com/gurujam/blog_project" target="_blank" class="github"><i class="fa fa-github"></i></a></li>
                                </ul>

                            </div>
                        </div>

                        <div class="my-detail">

                            <div class="white-spacing">
                                <h1>Alois Tendil</h1>
                                <span>World Trotter</span>
                            </div>

                            <ul class="menu-link">
                                <li>
                                    <a href="{{ url('homepage') }}about" class="badge badge-dark">About</a>
                                </li>
                                <li>
                                    <a href="{{ url('homepage') }}contact" class="badge badge-dark">Contact</a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
                <!-- About Me (Left Sidebar) End -->

                <!-- Blog Post (Right Sidebar) Start -->
                <div class="col-md-9">
                    <div class="col-md-12 page-body">
                        <div class="row">


                            <div class="sub-title">
                                <nav class="navbar navbar-default">
                                    <div class="container-fluid">
                                <ul class="nav navbar-nav navbar-right">
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                        <li> <a href="{{ path('fos_user_profile_edit') }}" >
                                                Logged in as {{ app.user.username }}
                                            </a>
                                        </li>
                                        {% if is_granted("ROLE_ADMIN") %}
                                            <li> <a href="{{ url('homepage') }}admin" >
                                                    Go to Admin Dash
                                                </a>
                                            </li>
                                        {% endif %}
                                        <li ><a href="{{ path('fos_user_security_logout') }}" >
                                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                            </a>
                                        </li>
                                    {% else %}
                                        <li><a href="{{ path('fos_user_security_login') }}" >{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                                        <li><a href="{{ path('fos_user_registration_register') }}" >{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                                    {% endif %}
                                </ul>
                                    </div>
                                </nav>



                                <!--<a href="{{ url('homepage') }}contact"><i class="icon-envelope"></i></a>-->
                            </div>


                            <div class="col-md-12 content-page">
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->

    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/plugin.js') }}"></script>

    <!-- Main Javascript File  -->
    <script type="text/javascript" src="{{ asset('js/scripts.js') }}"></script>
    {% block javascripts %}{% endblock %}
    </body>
</html>
