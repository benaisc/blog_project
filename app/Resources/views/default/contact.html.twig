{% block body %}
    <div class="col-md-12 blog-post">

        <!-- My Intro Start -->
        <div class="post-title margin-top-70">
            <h1>Contact <span class="main-color">Alois</span></h1>
        </div>


        <div class="row">

            <div class="col-md-3 col-sm-3">
                <div class="contact-us-detail">
                    <i class="icon-screen-smartphone color-6"></i>
                    <p><a href="tel:+1234567890">+1234 567 890</a></p>
                </div>
            </div>

            <div class="col-md-5 col-sm-5">
                <div class="contact-us-detail">
                    <i class="icon-envelope-open color-5"></i>
                    <p><a href="mailto:world-trotter@netcourrier.com">world-trotter@netcourrier.com</a></p>
                </div>
            </div>

            <div class="col-md-4 col-sm-4">
                <div class="contact-us-detail">
                    <i class="icon-clock color-3"></i>
                    <p>Mon - Fri 09:00 – 18:00 (Australian Time!)</p>
                </div>
            </div>

        </div>


        <div class="row margin-top-30">
            <div class="col-md-12">

                <div class="row">

                    {{ form_start(form) }}

                    <div class="col-sm-6">
                        <div class="form-group">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            {{ form_widget(form.website) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            {{ form_widget(form.place) }}
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <div class="form-group">
                            {{ form_widget(form.subject) }}
                            {{ form_errors(form.subject) }}
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="textarea-message form-group">
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                        </div>
                    </div>

                    {# Render CSRF token etc .#}
                    <div style="display:none">
                        {{ form_rest(form) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="load-more-button">Send</button>
                    </div>

                    {{ form_end(form) }}


