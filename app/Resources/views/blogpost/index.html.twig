{% extends 'base.html.twig' %}

{% block body %}

    <section> <h1>Blogposts list</h1></section>


            <aside>
            <a href="{{ path('blogpost_new') }}" class="btn btn-primary" role="button">Create a new blogPost</a>
            </aside>


        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col-sm-1">Id</th>
                    <th scope="col-sm-2">Title</th>
                    <th scope="col-sm-3">Content</th>
                    <th scope="col-sm-2">url</th>
                    <th scope="col-sm-2">Published</th>
                    <th scope="col-sm-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for blogPost in blogPosts %}
                <tr>
                        <th scope="row"><a href="{{ path('blogpost_show', { 'id': blogPost.id }) }}">{{ blogPost.id }}</a></th>
                        <td scope="col-sm-2">{{ blogPost.title }}</td>
                        <td scope="col-sm-3">{{ blogPost.getSomeWords(10) }}</td>
                        <td scope="col-sm-2">{{ blogPost.urlAlias }}</td>
                        <td scope="col-sm-2">{% if blogPost.published %}{{ blogPost.published|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td scope="col-sm-2">
                            <p>
                                        <a href="{{ path('blogpost_show', { 'id': blogPost.id }) }}" class="btn btn-default btn-block" role="button" >show</a>
                            </p><p>
                                        <a href="{{ path('blogpost_edit', { 'id': blogPost.id }) }}" class="btn btn-default btn-block" role="button">edit</a>
                            </p>
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

{% endblock %}
