{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
	<!-- Blog Post Start -->
	<div class="col-md-12 blog-post">
		<a href="{{ post.image }}" target="_blank">
			<img src="{{ post.image }}" class="img-fluid" alt="" width="100%">
		</a>
		<div class="post-title">
			<h1>{{ post.title }}</h1></a>
		</div>
		<div class="post-info">
			<span>{{ post.getPublishedStr() }} / by <a href="{{ url('homepage') }}about">Alois</a></span>
		</div>
		<div class="post-content">
			{{ post.content }}
		</div>
	</div>

	<center>
		<a href="{{ url('homepage') }}" class="btn btn-primary" role="button">Homepage</a>
	</center>
	<!-- Blog Post End -->
{% endblock %}
